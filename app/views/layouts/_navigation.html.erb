<%= link_to root_path, :class => 'brand' do %>
  <%=	$settings.app_name %>
  <% unless Rails.env.production? %>
    <small>[<%=	Rails.env %>]</small>
  <% end %>
<% end %>
<% if user_signed_in? %>
  <ul class="nav">
    <li>
      <%= link_to 'Applications', applications_path %>
    </li>
  </ul>
<% end %>

<ul class="nav pull-right">
  <% if user_signed_in? %>
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        <i class="icon-user"></i>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to edit_user_registration_path do %>
            <%= current_user.name || current_user.email %>
          <% end %>
        </li>
        <li class="divider"></li>
        <li>
          <%= link_to destroy_user_session_path, :method=>'delete' do %>
            <i class="icon-off"></i> Sign out
          <% end %>
        </li>
      </ul>
    </li>
    <% if current_user.has_role? :admin %>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="icon-cog"></i>
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
          <li>
            <%= link_to 'Integrations', integrations_path %>
          </li>
          <% if current_user.has_role? :global_admin %>
            <li>
              <%= link_to 'Users', users_path %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to edit_setting_path(Setting.first) do %>
                <i class="icon-wrench"></i> Settings
              <% end %>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  <% else %>
    <li>
      <%= link_to 'Sign in', new_user_session_path %>
    </li>
    <% if $settings.multi_org_enabled? && $settings.email_enabled? %>
      <li class="divider-vertical"></li>
      <li>
      <%= link_to 'Sign up', new_user_registration_path %>
      </li>
    <% end %>
  <% end %>
</ul>
