<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : $settings.app_name %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : $settings.app_name %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div id="header" class="container-fluid">
      <%= render 'layouts/navigation-top' %>
    </div>
    <div id="main" class="container-fluid" role="main">
      <div class="row-fluid">
        <!--<%= render "layouts/sidebar-#{sidebar_name}" if sidebar_exists? %> -->
        <div id="workingarea" class="span12">
          <div class="span10 offset1">
            <%= yield %>
          </div>
        </div>
      </div>
      <footer>
      </footer>
    </div>
  </body>
</html>
