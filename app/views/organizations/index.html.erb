<h1>Listing organizations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email address</th>
    <th>Smtp username</th>
    <th>Smtp password</th>
    <th>Smtp server</th>
    <th>Smtp port</th>
    <th>Is global</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @organizations.each do |organization| %>
  <tr>
    <td><%= organization.name %></td>
    <td><%= organization.email_address %></td>
    <td><%= organization.smtp_username %></td>
    <td><%= organization.smtp_password %></td>
    <td><%= organization.smtp_server %></td>
    <td><%= organization.smtp_port %></td>
    <td><%= organization.global %></td>
    <td><%= link_to 'Show', organization %></td>
    <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
    <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

